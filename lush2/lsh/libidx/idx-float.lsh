#? (idx-f1range <v>)
;; Return min and max of float-vector <v>.
(de idx-f1range (m)
  (declare (-idx1- (-float-)) m)
  (let ((minm (m 0)) (maxm (m 0))
	(res (float-array 2)) )
    (declare (-float-) minm maxm)
    (cinline-idx1loop m "double" "mp" "i"
      (cinline "if ((*mp)<(%s)) { %s = *mp; }" minm minm)
      (cinline "if ((*mp)>(%s)) { %s = *mp; }" maxm maxm) )
    (res 0 minm)
    (res 1 maxm)
    res))

