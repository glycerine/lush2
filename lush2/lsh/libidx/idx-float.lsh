;; make a place-code target matrix
#? (make-f2-place-target <n>)
;; return an <n>x<n> matrix with 1s on the diagonal and -1s everywhere else.
(de make-f2-place-target (n)
    ((-int-) n)
    (let ((m (float-array n n)))
      (idx-f2fill m -1)
      (for (i 0 (1- n)) (m i i 1))
      m))

