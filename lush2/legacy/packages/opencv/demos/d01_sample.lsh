(libload "opencv/opencv")

(setq  img (cvimage-read-rgb "pic1.jpg"))
(setq  simg (new cvimage (/ (==> img get_width) 2)
		         (/ (==> img get_height) 2)
			 (==> img get_depth)
			 (==> img get_nchannels)))

(cvPyrDown :img:p  :simg:p  7)
(cvPyrUp   :simg:p :img:p   7)

(defparameter cvwin (cvimage-show  img))
