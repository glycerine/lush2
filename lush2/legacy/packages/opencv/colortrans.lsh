(libload "opencv/cv-config")



#? *** colortrans

;; dummy function that adds OpenCV C header files in C file
(eval `(de dummy_colortrans () ,cv-cpheader-cmd ()))


;; ********************************************************

;;  /****************************************************************************************\
;;  *                                 Color Transforms                                       *
;;  \****************************************************************************************/

#? * (cvcvtcolor <src> <dst> <colorcvtcode>)
;;.PRE
;;  OPENCVAPI  void  cvCvtColor( const CvArr* src, CvArr* dst, int colorCvtCode );
(de cvCvtColor (src dst colorcvtcode)
    ((-gptr- "const CvArr *") src)
    ((-gptr- "CvArr *") dst)
    ((-int-) colorcvtcode)
    #{ cvCvtColor($src, $dst, $colorcvtcode); #}
    ())
;; ********************************************************

(dhc-make-cv ()
  dummy_colortrans
  cvcvtcolor
)
