(de snd_rawmidi_open (   inrmidi  outrmidi  name  mode  )
    ((-gptr- "snd_rawmidi_t **") inrmidi )
    ((-gptr- "snd_rawmidi_t **") outrmidi )
    ((-str-) name )
    ((-int-)  mode  )
    (int #{ snd_rawmidi_open(  $inrmidi  ,$outrmidi  ,$name->data  ,$mode  ) #} )
    )

